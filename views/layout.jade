doctype html
html(ng-app="myApp")
  head
    meta(charset='utf8')
    base(href='/')
    title DC Dashboard
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/app.css')
    link(rel='stylesheet', href='http://cdn.leafletjs.com/leaflet-0.7/leaflet.css')
    link(rel='stylesheet', href='/css/leaflet.awesome-markers.css')
    link(href="http://netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.css" rel="stylesheet")
  body
    .container
        .masthead(ng-controller='HeaderCtrl')
        img(src='/img/logo.gif' style='height:15%; width: 15%;')
        ul.nav.nav-justified
            li
                a(href='/') Live Stream
            li
                a(href='history') Historical View
            li
                a(href='near') Users Near Me
            li
                a(href='contact') Contact
        block content

    script(src='js/lib/underscore-min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular.min.js')
    script(src='js/lib/angular-route.min.js')
    script(src='http://cdn.leafletjs.com/leaflet-0.7/leaflet.js')
    script(src='js/lib/angular-leaflet-directive.js')
    script(src='js/lib/leaflet.awesome-markers.min.js')
    script(src='js/lib/ui-bootstrap-tpls-0.10.0.min.js')
    script(src='js/lib/socket.io.js')
    script(src='js/lib/socket.js')
    script(src='js/app.js')
    script(src='js/controllers.js')