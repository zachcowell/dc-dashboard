extends layout

block body
    div.navbar.navbar-default.navbar-fixed-top
        div.navbar-header
            a.navbar-brand(href='#') Babynames
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li.active
                    a(href='#') Name Analytics
                li
                    a(href='#') Top Names
                li
                    a(href='#') About
                li
                    a(href='#') Contact   

    div.container(ng-controller='MainCtrl')
        .row
            .col-12.col-sm-12.col-lg-12
                h3 Name comparison tool
            .col-8.col-sm-8.col-lg-8
                highchart(id='chart1' ng-show='ass' config='chartConfig')
            .col-4.col-sm-4.col-lg-4
                .well
                    form(role='form')
                        .form-group
                          label(for='inputName') Name
                          input.form-control.input-lg(ng-model='name' placeholder='Zachary')
                        .form-group
                          label(for='exampleInputPassword1') Years
                          input.form-control.input-lg(ng-model='years' placeholder='100')
                        .radio
                          label
                            input(type='radio', ng-model='gender', value='M', checked='checked')
                            | Male
                        .radio
                          label
                            input(type='radio', ng-model='gender', value='F')
                            | Female
                        .radio
                          label
                            input(type='radio', ng-model='gender', value='auto')
                            | Auto (most results)
                        button.btn.btn-default(ng-click='retrieveData()') Submit
        
    script(src='js/underscore-min.js')
    script(src='js/angular.min.js')
    script(src='js/angular-route.min.js')
    script(src='js/jquery.js')
    script(src='js/highcharts.js')
    script(src='js/highcharts-ng.min.js')
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')